// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Program {
  id          String           @id @default(cuid())
  title       String
  category    String
  summary     String?
  description String?
  region      String?          // 지역 (예: 경상남도)
  hashtags    String[]         @default([]) // 해시태그 (예: #진주 #통영)
  priceFrom   Int?             // 가격 시작 (원)
  priceTo     Int?             // 가격 끝 (원)
  rating      Float?           @default(0) // 평점 (0-5)
  reviewCount Int              @default(0) // 후기 개수
  thumbnailUrl String?         // 대표 이미지 URL (썸네일)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  images      ProgramImage[]
  schedules   ProgramSchedule[]
  events      Event[]
  favorites   Favorite[]
  reviews     Review[]

  @@index([category])
  @@index([region])
}

model ProgramImage {
  id        String   @id @default(cuid())
  programId String
  url       String
  createdAt DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model ProgramSchedule {
  id          String   @id @default(cuid())
  programId   String
  day         Int
  description String
  createdAt   DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model School {
  id         String   @id @default(cuid())
  name       String   @unique
  logoUrl    String?
  themeColor String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  events Event[]

  @@index([name])
}

model Event {
  id           String   @id @default(cuid())
  schoolId     String
  programId    String
  date         DateTime
  location     String
  studentCount Int
  status       String   @default("in_progress") // in_progress, completed
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school School  @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  images EventImage[]

  @@index([schoolId])
  @@index([programId])
  @@index([date])
  @@index([status])
}

model EventImage {
  id        String   @id @default(cuid())
  eventId   String
  url       String
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model Inquiry {
  id                String   @id @default(cuid())
  schoolName        String
  contact           String
  phone             String
  email             String
  message           String?
  expectedDate      String?  // 예상 일정
  participantCount  Int?     // 예상 인원
  purpose           String?  // 여행 목적/성격
  hasInstructor     Boolean? // 인솔자 필요 여부
  preferredTransport String? // 선호 이동수단
  mealPreference    String?  // 식사 취향/요구사항
  specialRequests   String?  // 특별 요구사항
  estimatedBudget   Int?     // 예상 예산 (원)
  status            String   @default("pending") // pending, completed
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model Achievement {
  id          String   @id @default(cuid())
  institution String
  year        Int
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([year])
  @@index([institution])
}

model CompanyNews {
  id        String   @id @default(cuid())
  title     String   // 메인 티커·목록에 표시되는 제목
  summary   String?  // 한 줄 요약 (비어 있으면 title 사용)
  content   String?  // 본문 (상세 페이지용)
  link      String?  // 외부 링크 (있으면 클릭 시 이동)
  isPinned  Boolean  @default(false) // 메인 페이지 티커에 노출
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isPinned])
  @@index([createdAt])
}

model Client {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // university, highschool, corporation, public
  country     String   @default("KR") // KR, JP, TW 등
  logoUrl     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([country])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  category    String   // camp, culture, sports, study_abroad, leadership 등
  region      String?  // Korea, Japan, Philippines, Global 등
  duration    String?  // 예: "4박5일"
  partner     String?  // 협력 기관
  target      String?  // 학생/교사/청소년 등
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([region])
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  email         String?  @unique
  password      String?  // bcrypt 해시된 비밀번호 (소셜 로그인 시 null)
  name          String
  phone         String?
  phoneVerified Boolean  @default(false)
  school        String?  // 소속 학교
  role          String   @default("user") // user, admin
  emailVerified Boolean  @default(false)
  image         String?  // 프로필 이미지 (소셜 로그인)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  emailVerifications    EmailVerification[]
  accounts              Account[]
  favorites            Favorite[]
  reviews               Review[]
  notificationSetting     NotificationSetting?
  notificationLogs        NotificationLog[]
  consultingLogs          ConsultingLog[]
  adminReadNotifications AdminReadNotification[]

  @@index([username])
  @@index([email])
  @@index([role])
  @@index([emailVerified])
  @@index([phoneVerified])
}

model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model PhoneVerification {
  id        String   @id @default(cuid())
  phone     String
  code      String
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([phone])
  @@index([code])
  @@index([expiresAt])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  programId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([userId, programId])
  @@index([userId])
  @@index([programId])
}

model G2BNotice {
  id              String   @id @default(cuid())
  noticeId        String   @unique // 나라장터 공고 ID
  title           String
  agency          String   // 발주기관
  region          String?
  category        String?
  budget          BigInt?
  deadline        DateTime?
  url             String
  status          String   @default("new") // new, notified, archived
  matchedKeywords String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  notificationLogs NotificationLog[]

  @@index([noticeId])
  @@index([status])
  @@index([category])
  @@index([region])
  @@index([deadline])
  @@index([createdAt])
}

model NotificationSetting {
  id         String   @id @default(cuid())
  userId     String   @unique
  keywords   String[] @default([]) // 관심 키워드
  regions    String[] @default([]) // 관심 지역
  categories String[] @default([]) // 관심 분류
  minBudget  BigInt?
  maxBudget  BigInt?
  enabled    Boolean  @default(true)
  email      String
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([enabled])
}

model NotificationLog {
  id          String    @id @default(cuid())
  userId      String
  noticeId    String
  email       String
  status      String    @default("pending") // pending, sent, failed
  sentAt      DateTime?
  errorMessage String?
  createdAt   DateTime  @default(now())

  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notice G2BNotice @relation(fields: [noticeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noticeId])
  @@index([status])
  @@index([createdAt])
}

model Review {
  id        String   @id @default(cuid())
  programId String
  userId    String
  rating    Int      // 평점 (1-5)
  content   String   // 후기 내용
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([programId, userId]) // 한 사용자는 한 프로그램에 하나의 후기만 작성 가능
  @@index([programId])
  @@index([userId])
  @@index([createdAt])
  @@index([rating])
}

model AdminReadNotification {
  id              String   @id @default(cuid())
  adminUserId     String
  notificationId  String   // inquiry-xxx, event-xxx 형태
  readAt         DateTime @default(now())

  user User @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@unique([adminUserId, notificationId])
  @@index([adminUserId])
  @@index([notificationId])
}

model ConsultingLog {
  id              String   @id @default(cuid())
  sessionId       String   // 채팅 세션 ID
  userId          String?  // 사용자 ID (회원인 경우)
  contactName     String?  // 연락처 이름
  contactPhone    String?  // 연락처 전화번호
  contactEmail    String?  // 연락처 이메일
  category        String?  // 선택한 카테고리
  participantCount Int?   // 예상 인원
  region          String?  // 희망 지역
  purpose         String?  // 여행 목적/성격
  hasInstructor   Boolean? // 인솔자 필요 여부
  preferredTransport String? // 선호 이동수단 (전세버스, KTX, 항공, 기타)
  mealPreference  String?  // 식사 취향/요구사항
  specialRequests String?  // 특별 요구사항 (알러지, 장애 지원 등)
  estimatedBudget BigInt?  // 예상 예산
  estimatedQuote  String?  // 예상 견적가 가이드
  canQuoteImmediately Boolean @default(false) // 즉시 견적 가능 여부
  conversation    Json     // 전체 대화 내용 (메시지 배열)
  summary         String?  // 요약본
  emailSent       Boolean  @default(false) // 이메일 발송 여부
  emailSentAt     DateTime?
  kakaoSent       Boolean  @default(false) // 카카오 알림톡 발송 여부
  kakaoSentAt     DateTime?
  status          String   @default("pending") // pending, quoted, contacted, completed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([userId])
  @@index([category])
  @@index([status])
  @@index([createdAt])
  @@index([emailSent])
}
