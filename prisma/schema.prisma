// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Program {
  id          String           @id @default(cuid())
  title       String
  category    String
  summary     String?
  description String?
  region      String?          // 지역 (예: 경상남도)
  hashtags    String[]         @default([]) // 해시태그 (예: #진주 #통영)
  priceFrom   Int?             // 가격 시작 (원)
  priceTo     Int?             // 가격 끝 (원)
  rating      Float?           @default(0) // 평점 (0-5)
  reviewCount Int              @default(0) // 후기 개수
  thumbnailUrl String?         // 대표 이미지 URL (썸네일)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  images      ProgramImage[]
  schedules   ProgramSchedule[]
  events      Event[]
  favorites   Favorite[]

  @@index([category])
  @@index([region])
}

model ProgramImage {
  id        String   @id @default(cuid())
  programId String
  url       String
  createdAt DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model ProgramSchedule {
  id          String   @id @default(cuid())
  programId   String
  day         Int
  description String
  createdAt   DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model School {
  id         String   @id @default(cuid())
  name       String   @unique
  logoUrl    String?
  themeColor String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  events Event[]

  @@index([name])
}

model Event {
  id           String   @id @default(cuid())
  schoolId     String
  programId    String
  date         DateTime
  location     String
  studentCount Int
  status       String   @default("in_progress") // in_progress, completed
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school School  @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  images EventImage[]

  @@index([schoolId])
  @@index([programId])
  @@index([date])
  @@index([status])
}

model EventImage {
  id        String   @id @default(cuid())
  eventId   String
  url       String
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model Inquiry {
  id         String   @id @default(cuid())
  schoolName String
  contact    String
  phone      String
  email      String
  message    String?
  status     String   @default("pending") // pending, completed
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model Achievement {
  id          String   @id @default(cuid())
  institution String
  year        Int
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([year])
  @@index([institution])
}

model Client {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // university, highschool, corporation, public
  country     String   @default("KR") // KR, JP, TW 등
  logoUrl     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([country])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  category    String   // camp, culture, sports, study_abroad, leadership 등
  region      String?  // Korea, Japan, Philippines, Global 등
  duration    String?  // 예: "4박5일"
  partner     String?  // 협력 기관
  target      String?  // 학생/교사/청소년 등
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([region])
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  email         String?  @unique
  password      String?  // bcrypt 해시된 비밀번호 (소셜 로그인 시 null)
  name          String
  phone         String?
  phoneVerified Boolean  @default(false)
  school        String?  // 소속 학교
  role          String   @default("user") // user, admin
  emailVerified Boolean  @default(false)
  image         String?  // 프로필 이미지 (소셜 로그인)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  emailVerifications    EmailVerification[]
  accounts              Account[]
  favorites            Favorite[]
  notificationSetting  NotificationSetting?
  notificationLogs     NotificationLog[]

  @@index([username])
  @@index([email])
  @@index([role])
  @@index([emailVerified])
  @@index([phoneVerified])
}

model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model PhoneVerification {
  id        String   @id @default(cuid())
  phone     String
  code      String
  verified  Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([phone])
  @@index([code])
  @@index([expiresAt])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  programId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([userId, programId])
  @@index([userId])
  @@index([programId])
}

model G2BNotice {
  id              String   @id @default(cuid())
  noticeId        String   @unique // 나라장터 공고 ID
  title           String
  agency          String   // 발주기관
  region          String?
  category        String?
  budget          BigInt?
  deadline        DateTime?
  url             String
  status          String   @default("new") // new, notified, archived
  matchedKeywords String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  notificationLogs NotificationLog[]

  @@index([noticeId])
  @@index([status])
  @@index([category])
  @@index([region])
  @@index([deadline])
  @@index([createdAt])
}

model NotificationSetting {
  id         String   @id @default(cuid())
  userId     String   @unique
  keywords   String[] @default([]) // 관심 키워드
  regions    String[] @default([]) // 관심 지역
  categories String[] @default([]) // 관심 분류
  minBudget  BigInt?
  maxBudget  BigInt?
  enabled    Boolean  @default(true)
  email      String
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([enabled])
}

model NotificationLog {
  id          String    @id @default(cuid())
  userId      String
  noticeId    String
  email       String
  status      String    @default("pending") // pending, sent, failed
  sentAt      DateTime?
  errorMessage String?
  createdAt   DateTime  @default(now())

  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notice G2BNotice @relation(fields: [noticeId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noticeId])
  @@index([status])
  @@index([createdAt])
}

