// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Program {
  id          String           @id @default(cuid())
  title       String
  category    String
  summary     String?
  description String?
  region      String?          // 지역 (예: 경상남도)
  hashtags    String[]         @default([]) // 해시태그 (예: #진주 #통영)
  priceFrom   Int?             // 가격 시작 (원)
  priceTo     Int?             // 가격 끝 (원)
  rating      Float?           @default(0) // 평점 (0-5)
  reviewCount Int              @default(0) // 후기 개수
  thumbnailUrl String?         // 대표 이미지 URL (썸네일)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  images      ProgramImage[]
  schedules   ProgramSchedule[]
  events      Event[]

  @@index([category])
  @@index([region])
}

model ProgramImage {
  id        String   @id @default(cuid())
  programId String
  url       String
  createdAt DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model ProgramSchedule {
  id          String   @id @default(cuid())
  programId   String
  day         Int
  description String
  createdAt   DateTime @default(now())

  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@index([programId])
}

model School {
  id         String   @id @default(cuid())
  name       String   @unique
  logoUrl    String?
  themeColor String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  events Event[]

  @@index([name])
}

model Event {
  id           String   @id @default(cuid())
  schoolId     String
  programId    String
  date         DateTime
  location     String
  studentCount Int
  status       String   @default("in_progress") // in_progress, completed
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school School  @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  images EventImage[]

  @@index([schoolId])
  @@index([programId])
  @@index([date])
  @@index([status])
}

model EventImage {
  id        String   @id @default(cuid())
  eventId   String
  url       String
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model Inquiry {
  id         String   @id @default(cuid())
  schoolName String
  contact    String
  phone      String
  email      String
  message    String?
  status     String   @default("pending") // pending, completed
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Document {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

model Achievement {
  id          String   @id @default(cuid())
  institution String
  year        Int
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([year])
  @@index([institution])
}

model Client {
  id          String   @id @default(cuid())
  name        String   @unique
  type        String   // university, highschool, corporation, public
  country     String   @default("KR") // KR, JP, TW 등
  logoUrl     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([country])
}

model Product {
  id          String   @id @default(cuid())
  title       String
  category    String   // camp, culture, sports, study_abroad, leadership 등
  region      String?  // Korea, Japan, Philippines, Global 등
  duration    String?  // 예: "4박5일"
  partner     String?  // 협력 기관
  target      String?  // 학생/교사/청소년 등
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([region])
}

