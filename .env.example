# Database (Supabase 권장 설정)
# Prisma CLI/migrate/db push용 Direct URL (5432)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?sslmode=require"
# (권장) Prisma CLI 전용 Direct URL 별도 키
DATABASE_DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?sslmode=require"
# 앱 런타임/서버리스용 Pooling URL (6543 + pgbouncer=true)
DATABASE_POOLING_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-ap-northeast-2.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true"

# Admin Authentication
# 관리자 로그인 비밀번호 (반드시 변경하세요!)
ADMIN_PASSWORD="change-this-to-a-strong-password"

# Optional: UploadThing (for image uploads)
# 이미지 업로드 기능을 사용하려면 UploadThing 계정이 필요합니다
# UPLOADTHING_SECRET="your-uploadthing-secret"
# UPLOADTHING_APP_ID="your-uploadthing-app-id"

# Google OAuth (구글 간편 로그인)
# Google Cloud Console에서 발급받은 OAuth 클라이언트 ID와 Secret
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Kakao Talk Share (카카오톡 채팅방 공유)
# 카카오 디벨로퍼스에서 JavaScript 키 발급 후 도메인 등록 필요
# NEXT_PUBLIC_KAKAO_JS_KEY="your-kakao-javascript-key"

# Kakao Channel (푸터 "카카오톡 문의" 버튼)
# 전체 URL 또는 채널 ID(_xxxxx / xxxxx) 모두 사용 가능
# NEXT_PUBLIC_KAKAO_CHANNEL_URL="https://pf.kakao.com/_xxxxx"
# KAKAO_CHANNEL_URL="_xxxxx"

# Social Login (간편 로그인)
# KAKAO_CLIENT_ID="your-kakao-client-id"
# KAKAO_CLIENT_SECRET="your-kakao-client-secret"
# NAVER_CLIENT_ID="your-naver-client-id"
# NAVER_CLIENT_SECRET="your-naver-client-secret"
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Kakao AlimTalk / BizM (회원가입 본인인증)
# KAKAO_BM_CLIENT_ID="your-kakao-bm-client-id"
# KAKAO_BM_CLIENT_SECRET="your-kakao-bm-client-secret"
# KAKAO_BM_SENDER_KEY="your-kakao-bm-sender-key"
# KAKAO_BM_SENDER_NO="02xxxxxxxx"
# KAKAO_BM_VERIFICATION_TEMPLATE_CODE="your-template-code"
# KAKAO_BM_BASE_URL="https://bizmsg-web.kakaoenterprise.com"

# BizM 별칭 키 (선택) - 위 KAKAO_BM_* 대신 사용 가능
# BIZM_CLIENT_ID="your-bizm-client-id"
# BIZM_CLIENT_SECRET="your-bizm-client-secret"
# BIZM_SENDER_KEY="your-bizm-sender-key"
# BIZM_SENDER_NO="02xxxxxxxx"
# BIZM_VERIFICATION_TEMPLATE_CODE="your-template-code"
# BIZM_BASE_URL="https://bizmsg-web.kakaoenterprise.com"

# NextAuth (필수)
# 세션 암호화를 위한 시크릿 키 (openssl rand -base64 32 명령어로 생성)
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"  # 개발 환경
# NEXTAUTH_URL="https://your-domain.com"  # 프로덕션 환경

# Search Console / 검색 엔진 소유권 검증 (선택)
# GOOGLE_SITE_VERIFICATION="google-site-verification-token"
# NAVER_SITE_VERIFICATION="naver-site-verification-token"

# App session (권장)
SESSION_SECRET="your-session-secret"
